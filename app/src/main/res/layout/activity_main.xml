<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    tools:context=".MainActivity">

    <com.naver.maps.map.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <LinearLayout
            android:id="@+id/btm_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:foregroundGravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:translationY="550dp">



            <Button
                android:id="@+id/btn_smoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/img_smoke"
                android:text="흡연구역"
                android:textColor="@color/black"
               />

            <Button
                android:id="@+id/btn_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/img_cloud"
                android:text="구름존"
                android:textColor="@color/black"

            />

            <Button
                android:id="@+id/btn_non_smoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/img_nonsmoke"
                android:text="금연구역"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_analysis"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="350dp"
            android:background="@drawable/shape_for_circle_button"
            android:drawable="@drawable/img_analysis"
            android:drawableTint="#00ff0000"
            android:text="A"
            android:textSize="32sp"

            />


    </com.naver.maps.map.MapView>


</androidx.constraintlayout.widget.ConstraintLayout>